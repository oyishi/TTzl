#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/electron" ]; then
  "$basedir/electron"  "$basedir/../electron-spawn/cli.js" "$@"
  ret=$?
else 
  electron  "$basedir/../electron-spawn/cli.js" "$@"
  ret=$?
fi
exit $ret
